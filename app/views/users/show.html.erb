<main>
	<div class="showup">
		<div class="showcontainer clearfix">
			<div class="show-right">
				<span class="fas fa-male human"></span>
			</div>
			<div class="showmodal"></div>
			<h1>Your Ronnies</h1>
			<p>Life is the best story</p>
			<div class="showbtn">
				<a href="/events/new">Create Event</a>
			</div>
			<a href="/logout">logout</a>

		</div>
	</div>
	<div class="showbottom">
		<div class="showcontainer">
			
			<div class="event-space">
				<ul>
					<% @eventuser.each do |eventuser| %>
					<%= link_to event_posts_path(eventuser.event.id) do %>
						<li>
							<div class="left">
								<%= attachment_image_tag eventuser.event, :image, :fill, 100, 100 %>
							</div>
							<div class="right">
								<span><%= eventuser.event.event_name %></span>
							</div>
						</li><% end %>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</main>

