
<body>
	<div class="background-image">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="margin">
					<div class="a">



						<h2>Edit Event</h2>
					</div></div>
					<%= form_for @post do |f| %>
					<div class="form-group">
						<div class="col-md-10">
							<label for="event_name" class="col-md-8 control-label">
								<%= f.label :"Event's Title" %>
								<%= f.text_field :title, class: "form-control" %>
							</label>
						</div>
					</div>



					<div class="form-group">
						<div class="col-md-10">
							<label for="event_name" class="col-md-2 control-label">
								<%= f.label :"Event's Images" %>
								<div class="b">
									<%= f.attachment_field :post_images_images, multiple: true, class: "img-circle" %>
								</div>
							</label>
						</div>

					</div>
							<br>

					<div class="form-group">
						<div class="col-md-10">

							<label for="input_password" class="col-md-8 control-label">
								<%= f.label :"Event's Date" %>
								<%= f.date_field :post_date, class: "form-control" %>
							</label>
						</div>
					</div>


					<div class="form-group">
						<div class="col-md-10">
							<div class="col-md-8", style="margin:30px 0">
								<% @post.post_images.each do |image| %>
							<%= attachment_image_tag image, :image, :fill, 200, 200 %>
							<% end %>
							</div>
						
						</div>
					</div>
							



					<div class="margin-top">
						<div class="col-md-4 col-md-offset-4">
							<%= f.submit 'Create', class: "btn btn-primary btn-block" %>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div></body>


