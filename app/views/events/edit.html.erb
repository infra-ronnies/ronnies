<div class="background-image">
<div class="row">
<div class="col-md-6 col-md-offset-3">
	<div class="margin">
		<div class="a">
	<h2>Edit Event</h2></div></div>
	<%= form_for(@event) do |f| %>
 	<div class="form-group">
            <div class="col-md-10">
              <label for="event_name" class="col-md-8 control-label">
                <%= f.label :"Event's Name" %>
                <%= f.text_field :event_name, class: "form-control" %>
              </label>
            </div>
     </div>

    <div class="form-group">
          <div class="col-md-10">
        	  <label for="event_name" class="col-md-8 control-label">
				<%= f.label :Image %>
				<div class="b">
				<%= f.attachment_field :image, class: "img-circle" %></div>
            </label>
          </div>
    </div>

	 	<div class="form-group">
            <div class="col-md-10">

              <label for="input_password" class="col-md-8 control-label">
                <%= f.label :"Event's Password" %>
                <%= f.text_field :event_password, class: "form-control" %>
              </label>
            </div>
        </div>
            <div class="margin-top">
  				<div class="col-md-4 col-md-offset-4">
	 			<%= f.submit 'Update', class: "btn btn-primary btn-block" %>
	</div>
	</div>
<% end %>
</div>
</div>