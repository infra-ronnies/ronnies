<section class="top">
    <div class="wrapper">
        <h1 class="top-title">Ronnies</h1>
        <p class="top-content">Ronniesは、一生忘れることのないサプライズを<br>演出するサイトです。関係のある沢山の人と<br>沢山の思い出を共有して、最高の別れを演出しましょう！</p>
        <button type="button" class="btn-lg btn-info signup col-xs-6">新規登録</button>
        <button type="button" class="btn-lg btn-primary login col-xs-6">ログイン</button>
        <%= video_tag("sample.mp4", :autoplay => true, :loop => true, class: 'top-video')%>
    </div>
</section>



<%= form_tag("login") do %>
	<label>ユーザー名</label>
	<input name="name" value="<%=  %>">
	<label>パスワード</label>
	<input type="password" name="password" value="<%=  %>">
	<input type="submit" value="ログイン">
<% end %>


<%= form_for(@user) do |f| %>
	<%= f.text_field :name %>
	<input type="password" name="user[password]">
	<%= f.attachment_field :profile_image %>
	<%= f.text_area :one_talk %>
	<%= f.submit :aa %>
<% end %>


